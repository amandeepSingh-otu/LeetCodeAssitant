{
  "manifest_version": 3,
  "name": "LeetCode Assistant",
  "version": "0.1.0",
  "description": "Assistant for LeetCode â€” highlights code and provides hints.",
  "action": {
    "default_title": "LeetCode Assistant",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
 "content_scripts": [
  {
    "matches": ["https://leetcode.com/*"],
    "js": ["pageScript.js"],
    "world": "MAIN",
    "run_at": "document_idle"
  },
  {
    "matches": ["https://leetcode.com/*"],
    "js": ["content.js"],
    "world": "ISOLATED",
    "run_at": "document_idle"
  }
],
  
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}